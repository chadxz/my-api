{
  "name": "my-api",
  "author": "Chad McElligott <chad.mcelligott@gmail.com>",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "start": "node server.js",
    "prettify": "prettier --write \"**/*.js\" \"!coverage/**\"",
    "test": "jest",
    "cover": "jest --coverage && open coverage/lcov-report/index.html",
    "ci-test": "jest --coverage && codecov",
    "deploy": "bin/deploy.sh"
  },
  "dependencies": {
    "acorn": "^7.4.1",
    "async": "^3.2.0",
    "body-parser": "^1.19.0",
    "common-tags": "^1.8.0",
    "compression": "^1.7.4",
    "config": "^3.3.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "lodash": "^4.17.21",
    "method-override": "^3.0.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pug": "^3.0.2",
    "raven": "^2.6.4",
    "redis": "^2.8.0",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "codecov": "^3.8.1",
    "env-test": "^1.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^22.21.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^4.1.0",
    "jest": "^24.9.0",
    "jest-runner-eslint": "^0.7.7",
    "prettier": "^1.19.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chadxz/my-api.git"
  },
  "engines": {
    "node": ">=14",
    "npm": ">=6"
  },
  "license": "MIT",
  "jest": {
    "cacheDirectory": "node_modules/.cache",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!test/**",
      "!config/**",
      "!coverage/**"
    ],
    "restoreMocks": true,
    "resetModules": true,
    "errorOnDeprecated": true,
    "projects": [
      {
        "displayName": "test"
      },
      {
        "displayName": "eslint",
        "runner": "jest-runner-eslint",
        "testMatch": [
          "<rootDir>/**/*.js"
        ]
      }
    ]
  }
}
